# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Duffel API Token (Get from https://duffel.com/dashboard)
# For testing, use a test token (starts with duffel_test_)
# For production, use a live token (starts with duffel_live_)
DUFFEL_API_TOKEN=duffel_test_YOUR_TEST_TOKEN_HERE

# Server Port (Internal port for the application)
PORT=3000

# Environment Mode (development/production)
NODE_ENV=development

# Docker Host Port (External port for accessing the application)
HOST_PORT=9000

# API Base URL for backend services
API_BASE_URL=https://api.example.com

# Stripe Keys (Get from https://stripe.com/dashboard)
# Use test keys for development (starts with pk_test_ and sk_test_)
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Booking Timer (How long users have to complete booking, in minutes)
BOOKING_TIMER_MINUTES=15
